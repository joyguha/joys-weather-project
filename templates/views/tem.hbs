<!DOCTYPE html>
<html lang="en">
<head>
  {{>header_files}}

</head>
<body>
    {{>navbar}}

    <!-- main header-->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
               <!--left div-->
              <div class="row">
               
                <div class="col-md-6 col-12 main_header_left ">
                    <!-- search bar for city name-->
              <div class="main_search">
                <form class="temp_form">
                  <input type="text" id="cityNameSearch" placeholder="Enter your city name" autocomplete="off">
                  <input type="submit" value="search" id="submitBtn">
                </form>
              </div>
              <!-- day and date-->
              <div class="tempInfo">
                <div class="top_layer">
                  <p id="day">Sunday</p>
                  <p id="date">3 Sep</p>
                </div>

               <!-- temperature and condition-->
              <div class="main_content">
                  <p id="city_name">Allahabad</p>
                  <div class="middle_layer data_hide">
                      <p id="temp"><span>13</span><sup>o</sup>C</p>
                      <p id="temp_status"><i class=" fa fa-cloud" aria-hidden="true"></i></p>
                    </div>
              </div>
              </div>
              


            </div>




                <!--right div-->
              <div class="col-md-6 col-12 main_header_right">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <img class="slide_img w-100" src="/img/hb3.png" alt="First slide">
                    </div>
                    <div class="carousel-item">
                      <img class="slide_img w-100" src="/img/hb6.png" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                      <img class="slide_img w-100" src="/img/hb4.png" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                      <img class="slide_img w-100" src="/img/hb9.png" alt="Fourth slide">
                    </div>
                    <div class="carousel-item">
                      <img class="slide_img w-100" src="/img/hb7.png" alt="Fifth slide">
                    </div>
                    <div class="carousel-item">
                      <img class="slide_img w-100" src="/img/hb10.jpg" alt="Eighth slide">
                    </div>
                  </div>
                  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>

              </div>
              </div>
              
            </div>
        </div>
    </div>
    <!--footer-->
    {{>footer}}
   
</body>
</html>